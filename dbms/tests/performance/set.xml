<test>
    <tags>
        <tag>long</tag>
    </tags>

    <stop_conditions>
        <all_of>
            <total_time_ms>10000</total_time_ms>
        </all_of>
        <any_of>
            <total_time_ms>20000</total_time_ms>
        </any_of>
    </stop_conditions>


    <substitutions>
       <substitution>
           <name>table</name>
           <values>
               <value>numbers(10000000)</value>
               <value>numbers_mt(100000000)</value>
           </values>
       </substitution>
       <substitution>
           <name>size</name>
           <values>
               <value>1</value>
               <value>16</value>
               <value>1024</value>
               <value>16384</value>
               <value>1048576</value>
               <value>10000000</value>
           </values>
       </substitution>
    </substitutions>

    <query>SELECT count() FROM {table} WHERE rand64() IN (SELECT number FROM system.numbers LIMIT {size})</query>
</test>
