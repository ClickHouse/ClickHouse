<clickhouse>
    <logger>
        <!-- We log heavily using the async logger, with a small queue size to trigger the drop messages metrics -->
        <console>1</console>
        <level>test</level>
        <log>/var/log/clickhouse-server/clickhouse-server.log</log>
        <errorlog_level>error</errorlog_level>
        <errorlog>/var/log/clickhouse-server/clickhouse-server.err.log</errorlog>
        <size>200M</size>
        <count>10</count>
        <async>true</async>
        <async_queue_max_size>1</async_queue_max_size>
    </logger>
</clickhouse>
