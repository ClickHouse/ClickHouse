<clickhouse>
    <storage_configuration>
        <disks>
            <hdd_blob>
                <type>local_blob_storage</type>
                <path>/</path>
            </hdd_blob>
            <cache_dynamic_resize>
                <type>cache</type>
                <disk>hdd_blob</disk>
                <max_size>100Ki</max_size>
                <max_elements>100</max_elements>
                <max_file_segment_size>10</max_file_segment_size>
                <boundary_alignment>10</boundary_alignment>
                <path>./cache_dynamic_reload/</path>
            </cache_dynamic_resize>
            <cache_with_max_size_ratio>
                <type>cache</type>
                <disk>hdd_blob</disk>
                <path>max_size_ratio/</path>
                <max_size_ratio_to_total_space>0.7</max_size_ratio_to_total_space>
            </cache_with_max_size_ratio>
        </disks>
    </storage_configuration>
    <filesystem_cache_log>
            <database>system</database>
            <table>filesystem_cache_log</table>
    </filesystem_cache_log>
</clickhouse>
