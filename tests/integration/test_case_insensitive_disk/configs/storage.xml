<clickhouse>
    <storage_configuration>
        <disks>
            <casefold>
                <type>local</type>
                <path>/mnt/ext4/case-insensitive/clickhouse/</path>
            </casefold>
        </disks>
        <policies>
            <casefold_policy>
                <volumes>
                    <main>
                        <disk>casefold</disk>
                    </main>
                </volumes>
            </casefold_policy>
        </policies>
    </storage_configuration>
</clickhouse>
