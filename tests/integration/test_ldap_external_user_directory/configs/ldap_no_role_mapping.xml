<clickhouse>
    <ldap_servers>
        <openldap>
            <host>openldap</host>
            <port>1389</port>
            <bind_dn>cn={user_name},ou=users,dc=example,dc=org</bind_dn>
            <enable_tls>no</enable_tls>
        </openldap>
    </ldap_servers>
    <user_directories>
        <ldap>
            <server>openldap</server>
        </ldap>
    </user_directories>
</clickhouse>
