<?xml version="1.0"?>
<yandex>
    <users>
        <default>
            <!-- For testing the table filters -->
            <databases>
                <mydb>
                    <!-- Simple expression filter -->
                    <table>
                        <filter>a = 1</filter>
                    </table>

                    <!-- Complex expression filter -->
                    <table name='filtered_table2'>
                        <filter>a + b &lt; 1 or c - d &gt; 5</filter>
                    </table>

                    <!-- Filter with ALIAS column -->
                    <table name='.filtered_table4'>
                        <filter>c = 1</filter>
                    </table>
                </mydb>
            </databases>
        </default>
    </users>
</yandex>
