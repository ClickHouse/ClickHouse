<clickhouse>
    <remote_servers>
        <insecure>
            <node>
                <host>n1</host>
                <port>9000</port>
            </node>
            <node>
                <host>n2</host>
                <port>9000</port>
            </node>
        </insecure>

        <secure>
            <secret>foo</secret>
            <node>
                <host>n1</host>
                <port>9000</port>
            </node>
            <node>
                <host>n2</host>
                <port>9000</port>
                <!-- This is required only to -> replace it -> to force cluster reload -> to recreate connections -->
                <priority>1</priority>
            </node>
        </secure>

        <secure_backward>
            <secret>foo_backward</secret>
            <node>
                <host>n1</host>
                <port>9000</port>
            </node>
            <node>
                <host>backward</host>
                <port>9000</port>
            </node>
        </secure_backward>
    </remote_servers>
</clickhouse>
