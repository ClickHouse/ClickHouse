<clickhouse>
    <storage_configuration>
        <disks>
            <one>
                <type>local</type>
                <path>/var/lib/disks/one/</path>
            </one>
            <two>
                <type>local</type>
                <path>/var/lib/disks/two/</path>
            </two>
        </disks>
        <policies>
            <policy1>
                <volumes>
                    <single>
                        <disk>one</disk>
                    </single>
                </volumes>
            </policy1>
            <policy2>
                <volumes>
                    <single>
                        <disk>two</disk>
                    </single>
                </volumes>
            </policy2>
        </policies>
    </storage_configuration>
    <backups>
        <allowed_path>/backups</allowed_path>
    </backups>
</clickhouse>
