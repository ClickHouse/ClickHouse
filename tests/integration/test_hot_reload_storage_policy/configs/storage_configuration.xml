<clickhouse>
    <storage_configuration>
        <disks>
            <disk0>
                <path>/var/lib/clickhouse/disk0/</path>
            </disk0>
            <disk1>
                <path>/var/lib/clickhouse/disk1/</path>
            </disk1>
        </disks>
        <policies>
            <default_policy>
                <volumes>
                    <default_volume>
                        <disk>disk0</disk>
                    </default_volume>
                </volumes>
            </default_policy>
        </policies>
    </storage_configuration>
</clickhouse>