<clickhouse>
    <storage_configuration>
        <disks>
            <split_cache_disk>
                <type>s3</type>
                <endpoint>http://minio1:9001/root/data/</endpoint>
                <access_key_id>minio</access_key_id>
                <secret_access_key>ClickHouse_Minio_P@ssw0rd</secret_access_key>
            </split_cache_disk>
            <split_cache_slru>
                <type>cache</type>
                <disk>split_cache_disk</disk>
                <path>/cache1/</path>
                <max_size>5Mi</max_size>
                <max_file_segment_size>1Ki</max_file_segment_size>
                <cache_on_write_operations>1</cache_on_write_operations>
                <use_split_cache>1</use_split_cache>
                <split_cache_ratio>0.4</split_cache_ratio>
                <cache_policy>SLRU</cache_policy>
            </split_cache_slru>
            <split_cache_lru>
                <type>cache</type>
                <disk>split_cache_disk</disk>
                <path>/cache2/</path>
                <max_size>5Mi</max_size>
                <max_file_segment_size>1Ki</max_file_segment_size>
                <cache_on_write_operations>1</cache_on_write_operations>
                <use_split_cache>1</use_split_cache>
                <split_cache_ratio>0.4</split_cache_ratio>
                <cache_policy>LRU</cache_policy>
            </split_cache_lru>
            <lru>
                <type>cache</type>
                <disk>split_cache_disk</disk>
                <path>/lru/</path>
                <max_size>5Mi</max_size>
                <max_file_segment_size>1Ki</max_file_segment_size>
                <cache_on_write_operations>1</cache_on_write_operations>
                <cache_policy>SLRU</cache_policy>
            </lru>
        </disks>
        <policies>
            <split_cache_slru>
                <volumes>
                    <main>
                        <disk>split_cache_slru</disk>
                        <!-- To make test more determenistic -->
                        <prefer_not_to_merge>true</prefer_not_to_merge>
                    </main>
                </volumes>
            </split_cache_slru>
            <split_cache_lru>
                <volumes>
                    <main>
                        <disk>split_cache_lru</disk>
                        <!-- To make test more determenistic -->
                        <prefer_not_to_merge>true</prefer_not_to_merge>
                    </main>
                </volumes>
            </split_cache_lru>
            <lru>
                <volumes>
                    <main>
                        <disk>lru</disk>
                        <!-- To make test more determenistic -->
                        <prefer_not_to_merge>true</prefer_not_to_merge>
                    </main>
                </volumes>
            </lru>
        </policies>
    </storage_configuration>
</clickhouse>