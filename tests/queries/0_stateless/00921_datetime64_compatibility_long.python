#!/usr/bin/env python3
# encoding: utf-8

import argparse
import itertools
import re
import sys

# Create SQL statement to verify dateTime64 is accepted as argument to functions taking DateTime.
FUNCTIONS = """
toTimeZone(N, 'UTC')
