CREATE VIEW default.audit_size_column
AS SELECT
    formatReadableSize(size) AS formatted,
    sum(column_bytes_on_disk) AS size,
    column,
    `table`,
    database
FROM system.parts_columns
WHERE (active = 1) AND ((database = {db:String}) OR (database = currentDatabase())) AND match(`table`, {table:String}) AND match(column, {column:String})
GROUP BY
    database,
    `table`,
    column
