test_one_thread_simple_group_by() {
  expected_size_hint=$table_size
  prepare_table

  query="
  -- size_hint = $expected_size_hint --
    SELECT number
      FROM $table_name
  GROUP BY number
  SETTINGS max_threads = 1
    FORMAT Null;"

  run_query
  run_query
  check_preallocated_elements $expected_size_hint
  print_border
}

