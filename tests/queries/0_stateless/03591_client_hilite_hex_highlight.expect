#!/usr/bin/expect -f

# This is a test to validate if --hilite works as expected for clickhouse-client

set basedir [file dirname $argv0]
set basename [file tail $argv0]
if {[info exists env(CLICKHOUSE_TMP)]} {
    set CLICKHOUSE_TMP $env(CLICKHOUSE_TMP)
} else {
    set CLICKHOUSE_TMP "."
}
exp_internal -f $CLICKHOUSE_TMP/$basename.debuglog 0
set history_file $CLICKHOUSE_TMP/$basename.history

log_user 0
set timeout 10
match_max 100000

expect_after {
    # Do not ignore eof from expect
    -i $any_spawn_id eof { exp_continue }
    # A default timeout action is to do nothing, change it to fail
    -i $any_spawn_id timeout { exit 1 }
}

spawn bash -c "source $basedir/../shell_config.sh ; \$CLICKHOUSE_CLIENT_BINARY --hilite 1"
expect "\n:) "

# Validate that hex character sequence doesn't cause the client to crash.
# Also validate that highlighting works correctly.
send  "SELECT x'A0';\r"

expect -- "\033\\\[0;22;32mx'A0'\033\\\[0m"

# expect at least one byte and a newline to pass
expect -re {.+\r\n};

expect ":) "
