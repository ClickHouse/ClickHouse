<!-- Config that is used when proxy server is run without config file. -->
<clickhouse>
    <logger>
        <level>trace</level>
        <console>true</console>
    </logger>

    <tcp_port>9090</tcp_port>

    <storage>
        <servers>
            <server>
                <key>server</key>
                <host>127.0.0.1</host>
                <!-- port with enabled proxy header parsing -->
                <tcp_port>9011</tcp_port>
            </server>
        </servers>
    </storage>

    <routing>
        <default>
             <action>
                <route_to>
                    <server>server</server>
                </route_to>
            </action>
        </default>
    </routing>
</clickhouse>
