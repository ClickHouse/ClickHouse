<clickhouse>
    <logger>
        <level>trace</level>
        <console>true</console>
    </logger>

    <interfaces>
        <plain_keeper_tcp>
            <protocol>keepr_tcp</protocol>
            <port>9181</port>
            <enable_tls>no</enable_tls>
        </plain_keeper_tcp>
    </interfaces>

    <keeper_server>
        <server_id>1</server_id>
        <log_storage_path>./keeper_log</log_storage_path>
        <snapshot_storage_path>./keeper_snapshot</snapshot_storage_path>

        <raft_configuration>
            <server>
                <id>1</id>
                <hostname>localhost</hostname>
                <port>44444</port>
            </server>
        </raft_configuration>
    </keeper_server>
</clickhouse>
